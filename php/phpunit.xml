<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php" backupGlobals="false" colors="true">
    <testsuites>
        <testsuite name="PHP Coding Katas Test Suite">
            <directory>./tests/ElliotJReed/Katas/</directory>
        </testsuite>
    </testsuites>
